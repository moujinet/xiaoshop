{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "src/types/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.ts"
  ]
}