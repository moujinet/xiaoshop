{
  "name": "xiaoshop",
  "version": "1.0.0",
  "private": true,
  "description": "XiaoShop 云链小店",
  "homepage": "https://github.com/moujinet/xiaoshop#readme",
  "bugs": {
    "url": "https://github.com/moujinet/xiaoshop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moujinet/xiaoshop.git"
  },
  "license": "Apache-2.0",
  "author": "Allen Luo <luoyi@mouji.net>",
  "type": "module",
  "scripts": {
    "cli": "cross-env NODE_ENV=development xiaoshop",
    "commit": "czg",
    "prepare": "simple-git-hooks",
    "stylelint": "stylelint apps/**/src/**/*.{html,vue,css,less}",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,tsx,js,jsx}": "eslint --fix",
    "*.{html,vue,less}": [
      "pnpm stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@antfu/ni": "^0.23.1",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@xiaoshop/cli": "workspace:*",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.11.0",
    "czg": "^1.11.0",
    "eslint": "^9.15.0",
    "eslint-plugin-perfectionist": "^4.1.2",
    "eslint-plugin-vue": "^9.31.0",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.14.3",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.7.2",
    "vitepress": "^1.5.0"
  },
  "packageManager": "pnpm@9.14.3"
}
