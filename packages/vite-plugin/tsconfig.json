{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    },
  },
  "include": ["./src", "./test"],
  "exclude": ["node_modules", "**/dist"]
}
