{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": "./src",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "../*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "./types"
    ],
    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["src", "./types/**/*.d.ts"],
  "exclude": ["node_modules", "scripts"]
}
