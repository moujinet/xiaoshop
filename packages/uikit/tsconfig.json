{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@xiaoshop/uikit-preset": ["../uikit-preset/src/index.ts"],
      "~/*": ["src/*"],
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**"
  ]
}
